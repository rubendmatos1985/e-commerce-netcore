@model Order

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form>
    <h3>Ship to</h3>
    <div class="form-group">
        <label>Name: </label>
        <input asp-for="Name" class="form-control"/>
    </div>
    <h3>Address</h3>
    <div class="form-group">
        <label>Line 1:</label>
        <input asp-for="Line1" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Line2:</label>
        <input class="form-control" asp-for="Line2"/>
    </div>
    <div class="form-group">
        <label>Line3:</label>
        <input class="form-control" asp-for="Line3" />
    </div>
    <div class="form-group">
        <label>City:</label>
        <input asp-for="City" class="form-control"/>
    </div>
    <div class="form-group">
        <label>State:</label>
        <input class="form-control" asp-for="State"/>
    </div>
    <div class="form-group">
        <label>Zip:</label>
        <input class="form-control" asp-for="Zip"/>
    </div>
    <div class="form-group">
        <label>Country:</label>
        <input asp-for="Country" class="form-control"/>
    </div>
    <h3>Options</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap"/> Gift Wrap these items
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order"/>
    </div>
</form>